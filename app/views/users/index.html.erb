<h1>All Users</h1>

<% if flash[:notice] %>
  <h3><%= flash[:notice] %></h3>
<% end %>

<ul>
  <% @users.each do |user| %>
    <% if user.username != current_user.username %>
      <li><%= link_to user.username, user %> - <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></li>
    <% end %>
  <% end %>
</ul>


<div class="col-md-12 col-xs-12" align="center">
          <h1 class="display-4 font-weight-normal">
            <% if @user.picture %>
            <%= image_tag @user.picture, :class => "image-circle" %>
            <% else %>
              <%= image_tag @user.avatar.url(:medium) %>
            <% end %>
          </h1>
          <h1 class="lead font-weight-normal"><%= @user.full_name %></h1>
          <% if @user == current_user %>
          <a class="btn btn-primary btn-sm" href="<%= edit_user_path %>"> Edit Acount</a>
          <a class="btn btn-primary btn-sm" href="<%= new_workout_path %>"> Create Workout</a>

      </div>
</div>

<div class="container" >
  <div class="col-md-12 col-xs-12" align="center">
    	<div class="btn-group btn-group-justified" align-items-center>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-user"></span>
    			    <h4><%= current_user.total_workouts %></h4>
              <p># workouts </p>
                </button>
            </div>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-time"></span>
    			    <h4><%= current_user.total %></h4>
              <p># total time (mins)</p>
                </button>
            </div>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-usd"></span>
                    <h4><%= current_user.cardio_by_percentage %></h4>
                    <p> % cardio </p>
                </button>
            </div>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-cog"></span>
                    <h4><%= current_user.strength_by_percentage %></h4>
                    <p> % strength </p>
                </button>
            </div>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-question-sign"></span>
               <h4><%= current_user.favouritexercise.name %></h4>
               <p> Fav Ex </p>
                </button>
            </div>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-question-sign"></span>
               <h4><%= current_user.friends.count %></h4>
               <p> Following </p>
                </button>
            </div>
            <div class="btn-group" onclick="#">
                <button type="button" class="btn btn-nav">
                    <span class="glyphicon glyphicon-question-sign"></span>
               <h4><%= current_user.inverse_friends.count %></h4>
               <p> Followed By </p>
                </button>
            </div>
        </div>
	</div>
</div>
</div>

<hr>


<div class="col-md-12 col-xs-12" align="left">
<div class="container">
  <h3> Followee's Workouts </h3>
 <div class='row'>
<% @user.friends.collect do |friend| %>
<div class='col-md-3'>
    <div class='card mb-3 box-shadow' bg-light text-dark>
        <%= image_tag friend.picture, class: "img-thumbnail"%>
    <div class="card-body bg-light text-dark>
      <h3 class="card-text"> <%= link_to friend.username.capitalize, user_path(friend)%> </h3>
        <p> Latest Workout:
          <% x = friend.workouts.each do |workout| %>
            <% workout.name %>
            <% end %> </p>
        <p> StengthCount: <%= friend.strengthcount %>
        CardioCount: <%= friend.cardiocount %></p>
      <div class="d-flex justify-content-between align-items-center">
          </p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>

<hr>



<div class="container">
  <h3>Your Latest Workouts</h3>
 <div class='row'>
   <% @user.workouts.each do |workout| %>
     <div class='col-md-3'>
       <div class='card mb-3 box-shadow'>
         <div class="card-body">
           <h5 class="card-text"><%= link_to workout.name.capitalize, workout_path(workout) %> </h5>
             <% day = workout.day.strftime("%m/%d/%Y") if workout.day %>
             <p>Date Completed: <%= "#{day} " %>
             StengthCount: <%= @user.strengthcount %>
             CardioCount: <%= @user.cardiocount %></p>
           <div class="d-flex justify-content-between align-items-center">
             <div class="btn-group">
               <button type="button" class="btn btn-sm btn-outline-secondary" href= "<%= workout_path(workout)%>">View</button>
               </p>
             </div>
           </div>
         </div>
       </div>
     </div>
   <% end %>
 </div>
</div>


<h3> Edit exisiting workout! </h3>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @workout do |f| %>
<%= f.label :user %>
<%= f.text_field :user %> <br><br>
<%= f.label :name %> of workout:
<%= f.text_field :name %> <br><br>
 <%=f.label :day %>
<%= f.date_field :day %><br><br>
<%= f.collection_check_boxes :exercise_ids, @exercises, :id, :name %> <br><br>


<%= fields_for "exercise_workouts[]" do |ff| %>
<%= ff.label :reps %>
<% end %>

<%= f.submit %>


<% end %>

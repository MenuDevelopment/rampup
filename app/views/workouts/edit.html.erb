<h3> Edit exisiting workout! </h3>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @workout do |f| %>
  <%= f.label :name %> of workout:
  <%= f.text_field :name %> <br><br>
  <%= f.label :day %>
  <%= f.date_field :day %><br><br>
  <%= f.collection_check_boxes :exercise_ids, @exercises, :id, :name %> <br><br>

  <%= f.fields_for :exercise_workouts do |i| %>
    <% category = i.object.exercise.category %>
    <h4><%= i.object.exercise.name %></h4>
    <% if category == "strength" %>
      <%= i.label :reps %>
      <%= i.text_field :reps %>
      <%= i.label :weight %>
      <%= i.text_field :weight %>
      <%= i.label :duration %>
      <%= i.text_field :duration %>
    <% elsif category == "cardio" %>
      <%= i.label :distance %>
      <%= i.text_field :distance %>
      <%= i.label :duration %>
      <%= i.text_field :duration %>
    <% end %>

    <br>
  <% end %>

  <%= f.submit %>


<% end %>

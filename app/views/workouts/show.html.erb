<h1><%= @workout.name %></h1>

<h3><%= @workout.day.strftime("I worked out on %m/%d/%Y") if @workout.day %></h3><br>

<% @workout.exercise_workouts.each do |e_w| %>
  <% exercise = e_w.exercise %>
  <%= link_to exercise.name, exercise %>
  <% if exercise.category == "strength" %>
    <%= "Reps: #{e_w.reps} | Weight: #{e_w.weight} lbs | Duration: #{e_w.duration} mins" %>
  <% elsif exercise.category == "cardio" %>
    <%= "Distance: #{e_w.distance} kms | Duration: #{e_w.duration} mins" %>
  <% end %>

  <br>
<% end %>
